<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/mind_ripple">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <gradient
                android:type="linear"
                android:startColor="@color/mind_primary_strong"
                android:centerColor="@color/mind_primary"
                android:endColor="@color/mind_accent"
                android:angle="45"/>
            <stroke android:width="0dp" android:color="@android:color/transparent"/>
            <padding android:left="8dp" android:top="10dp" android:right="8dp" android:bottom="10dp"/>
        </shape>
    </item>
</ripple>
