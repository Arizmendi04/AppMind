<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_gradient_mindfulness"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="28dp"
    android:paddingBottom="24dp">

    <!-- Blob superior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="end">
        <View
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="-8dp"
            android:alpha="0.40"
            android:background="@drawable/blob_soft_right" />
    </LinearLayout>

    <!-- Contenedor del panel (centrado) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <!-- Panel con borde degradado y esquinas grandes -->
        <LinearLayout
            android:id="@+id/panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/bg_panel_elevated"
            android:elevation="12dp"
            android:outlineProvider="background"
            android:padding="24dp"
            android:orientation="vertical">

            <!-- Chip -->
            <TextView
                android:id="@+id/tvChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chip_soft"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="Mindfulness · Versión app"
                android:textColor="@color/mind_primary"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium" />

            <!-- Logo (sin tint para respetar tu color) -->
            <ImageView
                android:id="@+id/logo"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_mindfulness_logo"
                android:contentDescription="Logo de Mindfulness" />

            <!-- Bienvenida -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="Bienvenido a Mindfulness"
                android:textColor="@color/mind_ink"
                android:textSize="26sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:text="Respira, enfoca y acompaña tu bienestar día a día."
                android:textColor="@color/mind_ink_soft"
                android:textSize="14sp" />

            <!-- Separador suave -->
            <View
                android:layout_width="100dp"
                android:layout_height="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:background="@drawable/divider_gradient" />

            <!-- Acceso por iconos (solo Google/Facebook) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnGoogle"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="18dp"
                    android:background="@drawable/bg_circle_white_shadow"
                    android:contentDescription="Continuar con Google"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_google_48" />

                <ImageButton
                    android:id="@+id/btnFacebook"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/bg_circle_facebook_shadow"
                    android:contentDescription="Continuar con Facebook"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_facebook_48" />
            </LinearLayout>

            <!-- Aviso -->
            <TextView
                android:id="@+id/tvTerms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="Al continuar aceptas los Términos y el Aviso de Privacidad."
                android:textColor="@color/mind_ink_muted"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Blob inferior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="start|bottom">
        <View
            android:layout_width="176dp"
            android:layout_height="176dp"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="6dp"
            android:alpha="0.30"
            android:background="@drawable/blob_soft_left" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="- Mindfulness -"
        android:textColor="@color/mind_ink_soft"
        android:textSize="12sp"
        android:fontFamily="sans-serif-medium" />
</LinearLayout>
